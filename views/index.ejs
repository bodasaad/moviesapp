<!-- Includes Head Part -->
<%- include('./includes/head.ejs') %>

<link rel="stylesheet" href="/assets/css/main.css">

</head>

<body>
  <!-- Header Section -->
  <div class="wrapper">


    <header class="lax" data-lax-preset="zoomInOut-0.8">
      <div id="header">
        <div class="header-banner">
          <p>Reach Your Series Easy, No Ads and <span>Completely Free</span>.</p>
        </div>

        <div class="welcom">
          <h1>House Series</h1>


          <ul class="socialMedia">
            <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
            <li><a href="#"><i class="fab fa-twitter"></i></a></li>
            <li><a href="#"><i class="fab fa-instagram"></i></a></li>
            <li><a href="#"><i class="fab fa-google"></i></a></li>
          </ul>
          <% if (!isAuthenticated) { %>
          <div class="join">
            <a href="/login">Login</a>
            <a href="/signup">Become A Member.</a>
          </div>
          <% } else { %>
          <div class="join">
            <h3>Welcome <%= name %></h3>
          </div>
          <% } %>
        </div>



      </div>
    </header>
    <!-- End Header Section -->
    <% if (errmsg){ %>
    <div class="msg msg-err">
      <p> <%= errmsg %> </p>
    </div>
    <% } %>
    <!-- Add Search Bar -->
    <%- include('./includes/searchBar.ejs') %>
    <!-- Add Search Bar -->

    <!-- Start Navigation -->
    <%- include('./includes/nav.ejs') %>
    <!-- End Navigation -->

    <!-- Start Slider -->
    <%- include('./includes/main-slider.ejs', {items: heighRating, slidertitle:'High Rated'}) %>
    <!-- Start Slider -->


    <div id="card">
      <% if (movies.length > 0) { %>

      <% movies.forEach(function(m) { %>

      <a href="/movies/<%= m._id %>">
        <div class="card-item lax">
          <div class="card-poster">
            <img src="<%= m.image.medium %>" alt="Poster">
          </div>
          <span class="card-item_rating">IMDb: <%= m.rating.average %></span>
        </div>
      </a>
      <% }) %>
      <section class="pagination">
        <% if( currentPage !== 1 && prevPage !== 1 ) { %>
        <a href="?page=1" class="btn">1</a>
        <% } %>
        <% if(hasPrevPage) { %>
        <a href="?page=<%= prevPage %>" class="btn"><%= prevPage %></a>
        <% } %>
        <a href="?page=<%= currentPage %>" class="btn active"><%= currentPage %></a>
        <% if(hasNextPage) { %>
        <a href="?page=<%= nextPage %>" class="btn"><%= nextPage %></a>
        <% } %>
        <% if(hasAfterNext) { %>
        <a href="?page=<%= afterNext %>" class="btn"><%= afterNext %></a>
        <% } %>
        <% if(lastPage !== currentPage && nextPage !== lastPage) { %>

        ...<a href="?page=<%= lastPage %>" class="btn">Last Page</a>
        <% } %>
      </section>
      <% } else { %>
      <h3> Somthing Went Wrong No Movies Avielable Yet!</h3>

      <% } %>
    </div>



    <div class="wrapperSection">
      <div id="advertisment-space">
        <h3>Rent This Space For Advertisment</h3>
        <a href="" style="color:#eee;">Know More..</a>
      </div>
      <!-- Start Slider -->
      <%- include('./includes/main-slider.ejs', {items: heighRating, slidertitle:'New Updated'}) %>
      <!-- Start Slider -->



      <div id="advertisment-space">
        <h3>Rent This Space For Advertisment</h3>
        <a href="" style="color:#eee;">Know More..</a>
      </div>

