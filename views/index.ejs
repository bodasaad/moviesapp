        <h2>
          Quick Accsess
        </h2>
        <h4 class="active">Categories</h4>
        <div class="categories">
          <a href="/drama">Drama</a>
          <a href="/action">Action</a>
          <a href="/comedy">Comedy</a>
          <a href="/romance">Romance</a>
        </div>
        <h3 href="/">High Rated</h3>
        <h4>Romance</h4>
        <div class="action">

        </div>
  
      </div> -->


    </div>





    <div id="contact">
      <div class="form-style">
        <p>Stay <span>Alert</span> For Latest Movies. <br> Sign Up </p>
        <form action="/signup" method="post">
          <input type="text" name="name" placeholder="Your Name.">
          <input type="email" name="email" placeholder="Your Email.">
          <input type="password" name="password" placeholder="Write Password.">
          <input type="password" name="passwordConf" placeholder="Rewrite Password.">
          <button class="btn main-btn" type="submit">Sign Up</button>
        </form>
      </div>
      <div class="photo">
        <img class="img-responsive" src="/assets/images/PopCorn.svg" alt="Icon" srcset="">
      </div>
    </div>


  </div>



  <%- include('./includes/copyRight.ejs') %>
  <script src="https://code.jquery.com/jquery-3.3.1.min.js"
    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>

  <script src="https://cdn.jsdelivr.net/npm/lax.js"></script>
  <script type="text/javascript" src="/slick/slick.min.js"></script>
  <script src="/assets/js/nav.js"></script>
  <script src="/assets/js/plugin.js"></script>
</body>

</html>