<!-- Includes Head Part -->
<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/assets/css/main.css">
<link rel="stylesheet" href="/assets/css/download.css">
</head>

<body>
    <div class="wrapper">


        <!-- Start Navigation -->
        <%- include('./includes/nav.ejs') %>
        <!-- End Navigation -->

        <!-- Add Search Bar -->
        <%- include('./includes/searchBar.ejs') %>
        <!-- Add Search Bar -->
        <h3 style="text-align: left; margin-bottom:10px">Here's Results Matches Your Search</h3>
        <div id="card">
            <% movie.forEach(function(m) { %>

            <a href="/movies/<%= m._id %>">
                <div class="card-item lax">
                    <div class="card-poster">
                        <img src="<%= m.image.medium %>" alt="Poster">
                    </div>
                    <span class="card-item_rating">IMDb: <%= m.rating.average %></span>
                </div>
            </a>
            <% }) %>
        </div>
        <% if(errmsg){ %>
        <div class="msg msg-err">
            <p> <%= errmsg %> </p>
        </div>
        <% } %>

    </div>
    <%- include('./includes/copyRight.ejs') %>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"
        integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k"
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="/slick/slick.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/lax.js"></script>
    <script src="/assets/js/fontawesome-all.min.js"></script>
    <script src="/assets/js/plugin.js"></script>
</body>

</html>